<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aria.assassin.Dashboard">

    <EditText
        android:id="@+id/aliveText"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:ems="10"
        android:text="Alive"
        android:gravity="center"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="50dp" />


    <EditText
        android:id="@+id/deadText"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:ems="10"
        android:text="Dead"
        android:gravity="center"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/exitGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_game"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="420dp" />


    <ListView
        android:id="@+id/alivePlayerList"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/aliveText"
        app:layout_constraintBottom_toTopOf="@+id/deadText"
        app:layout_constraintLeft_toLeftOf="@+id/aliveText"
        app:layout_constraintRight_toRightOf="@+id/aliveText"/>


    <ListView
        android:id="@+id/deadPlayerList"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="300sp"
        android:layout_height="150sp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight= "8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/deadText"
        app:layout_constraintBottom_toTopOf="@+id/exitGameButton"
        app:layout_constraintLeft_toLeftOf="@+id/deadText"
        app:layout_constraintRight_toRightOf="@+id/deadText" />

</android.support.constraint.ConstraintLayout>